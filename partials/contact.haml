.container
  .sixteen.columns
    / Message
    %h2.message-block
      Don't be shy, you can ask us <span>anything</span>.
      
    / Map
    .flex-container
      .map-wrap
        %iframe{:src => "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3037.642080649127!2d-86.89256464862818!3d40.41677917926384!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88131d44f1ea38cf%3A0xdc61422facb3b4ba!2sMatchBOX+Coworking+Studio!5e0!3m2!1sen!2sus!4v1479753333182"}
        .mobile-fix
      
      .news-wrap
        %h2 Recent News
        .news-list
          
    %br.clear
    %hr.width-100

  %br.clear

  .eight.columns
    %h3 Sign up for our newsletter
    /  MailChimp Signup Form
    #mc_embed_signup
      %form#mc-embedded-subscribe-form.validate{:action => "//matchboxstudio.us3.list-manage1.com/subscribe/post?u=c67a5fc059dc82356ce82a801&id=ff9857df65", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank"}
        .mc-field-group
          %input#mce-EMAIL.required.email{:name => "EMAIL", :placeholder => "email address", :type => "email", :value => ""}/
        #mce-responses.clear
          #mce-error-response.response{:style => "display:none"}
          #mce-success-response.response{:style => "display:none"}
        %a.button.mbxred{:href => "#", :onclick => "document.forms['mc-embedded-subscribe-form'].submit();"} Subscribe

  .eight.columns
    .six.columns.alpha
      / Contact Info
      %ul.contact-info
        %li.name
          %i.icon-user
          MatchBOX Coworking Studio, LLC
        %li.address
          %i.icon-home
          %span
            17 South 6th St., Suite X
            %br
            Stein Building
            %br
            Lafayette, IN 47901
            %br
        %li.email
          %i.icon-envelope-alt
          %a{:href => "mailto:hello@matchboxstudio.org"} hello@MatchBOXStudio.org
        %li.phone
          %i.icon-phone
          765.588.9295
          
    .one.columns.omega
      / Social
      %br
      .social
        %a{:href => "http://twitter.com/matchboxcowork"}
          %i.icon-twitter
        %a{:href => "http://facebook.com/matchboxcowork"}
          %i.icon-facebook
        %a{:href => "https://www.instagram.com/matchboxcowork/"}
          %i.icon-instagram
        %span.arrow

  %script{:type => "text/javascript", :src => "assets/js/news-section.js"}
